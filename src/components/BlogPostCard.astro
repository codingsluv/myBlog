---
interface Props {
    title: string;
    date: string;
    author: string;
    description: string;
    link: string;
    
}

const { title, date, author, description, link } = Astro.props as Props;
---

<a href={link} class="blog-card">
    <h3 class="blog-title">{title}</h3>
    <p class="blog-description">{description}</p>
    <p>By {author} on {date}</p>
</a>

<style>
    blog-card {
    display: block;
    width: 300px;
    padding: 15px;
    border-radius: 8px;
    background-color: #f9f9f9;
    text-decoration: none;
    color: inherit;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s ease;
  }
  .blog-card:hover {
    transform: translateY(-5px);
  }
  .blog-title {
    font-size: 1.25rem;
    margin: 0;
  }
  .blog-date {
    font-size: 0.875rem;
    color: #888;
  }
  .blog-description {
    margin-top: 10px;
    font-size: 1rem;
    color: #555;
  }
</style>